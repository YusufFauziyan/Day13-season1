<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="public/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- BOX-ICON -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <!-- GOOGLE-FONT -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <title>Login Page</title>
  </head>
  <body>
    <!-- NAV BARR -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container d-flex">
          <a class="navbar-brand" href="/">
              <img src="public/assets/logo.png" alt="" width="50px">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" style="width: 70%">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex">
              <li class="nav-item">
                <a class="nav-link ps-md-5 pe-5" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                {{#if isLogin}}
                <a class="nav-link" href="/add-project">Add Project</a>
                {{/if}}
              </li>
            </ul>
            <div class="d-md-flex justify-content-around align-items-center" style="width: 30%">
              <div class="d-md-flex">
                 {{#if isLogin}}
                  <a class="nav-link text-dark fw-bold" href="/" style="padding-left: 0;">Hello, {{user.name}}</a>
                  <a class="nav-link text-secondary" href="/logout" style="padding-left: 0;">Logout</a>
                {{else}}
                  <a class="nav-link text-secondary" href="/register" style="padding-left: 0;">Register</a>
                  <a class="nav-link text-dark active fw-bold" href="/login" style="padding-left: 0;">Login</a>
                {{/if}}
              </div>
              <a href="/contact">
                <button class="btn btn-dark btn-outline-light shadow ps-4 pe-4" type="submit" style="border-radius: 20px">Contact</button>
              </a>
            </div>
          </div>
        </div>
      </nav>

      <!-- FORM CONTACT -->
      <div class="bg-container d-flex" style="height: 94vh;">
        <form action="/login" method="POST"  class="container m-auto fw-bold" style="width: 450px;">
            <h2 class="text-center fw-bold mb-5">LOGIN TO YOUR ACOUNT</h2>
            {{#if messages.success}}
              <div class="alert alert-success text-center text-secondary" role="alert">
                {{messages.success}}
            </div>
            {{/if}}

            {{#if messages.danger}}
              <div class="alert alert-danger text-center text-secondary" role="alert">
                {{messages.danger}}
              </div>
            {{/if}}

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            
            <button class="btn btn-dark btn-outline-light shadow ps-4 pe-4 mt-5" type="submit" style="border-radius: 20px; float: right;">Login</button>
        </form>
      </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>